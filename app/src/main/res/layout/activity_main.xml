<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edge"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/title"
        android:contentDescription="@string/StringValue" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edge"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weather"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginStart="100dp"
            android:contentDescription="@string/StringValue"
            android:src="@drawable/sun" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/nanumgothicbold"
            android:gravity="center"
            android:text="@string/날씨"
            android:textColor="@color/yellow"
            android:textSize="34sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:background="@drawable/edge"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/StringValue"
                    android:src="@drawable/temperature" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/StringValue"
                    android:src="@drawable/humidity" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nanumgothicbold"
                    android:gravity="center"
                    android:text="@string/temperature"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/out_temp"
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanumgothicbold"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nanumgothicbold"
                    android:gravity="center"
                    android:text="@string/humidity"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/out_humid"
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanumgothicbold"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:background="@drawable/edge"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/uv_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/StringValue"
                    android:src="@drawable/uv" />

                <ImageView
                    android:id="@+id/dust_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/StringValue"
                    android:src="@drawable/dust_good" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nanumgothicbold"
                    android:gravity="center"
                    android:text="@string/uv"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/out_uv"
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanumgothicbold"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/orange"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nanumgothicbold"
                    android:gravity="center"
                    android:text="@string/dust_good"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/dust"
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanumgothicbold"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/blue"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="225dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/home_btn"
                android:layout_width="195dp"
                android:layout_height="105dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edge"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/StringValue"
                    android:src="@drawable/home"/>

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nanumgothicbold"
                    android:gravity="center"
                    android:text="@string/home"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/graph_btn"
                android:layout_width="195dp"
                android:layout_height="105dp"
                android:background="@drawable/edge"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/StringValue"
                    android:src="@drawable/graphs" />

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nanumgothicbold"
                    android:gravity="center"
                    android:text="@string/graphs"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/alarm_btn"
                android:layout_width="195dp"
                android:layout_height="105dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edge"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/StringValue"
                    android:src="@drawable/alarm" />

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nanumgothicbold"
                    android:gravity="center"
                    android:text="@string/alarm"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cctv_btn"
                android:layout_width="195dp"
                android:layout_height="105dp"
                android:background="@drawable/edge"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/StringValue"
                    android:src="@drawable/cctv" />

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nanumgothicbold"
                    android:gravity="center"
                    android:text="@string/cctv"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edge"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="110dp"
            android:fontFamily="@font/nanumgothicbold"
            android:gravity="center"
            android:text="@string/auto_mode"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ai_auto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="110dp"
            android:fontFamily="@font/nanumgothicbold"
            android:gravity="center"
            android:text="@string/off"
            android:textColor="@color/red"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>